<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/lecturas_sencillas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgCasa"
        android:layout_width="333dp"
        android:layout_height="223dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/casa" />

    <ImageView
        android:id="@+id/imgFamilia"
        android:layout_width="372dp"
        android:layout_height="212dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/familia" />

    <ImageView
        android:id="@+id/imgYo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/yo" />

    <Button
        android:id="@+id/btnVerMas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="@string/vemos_el_texto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imgBtnCasa"
        android:layout_width="105dp"
        android:layout_height="84dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="76dp"
        android:focusableInTouchMode="false"
        android:onClick="selectImg"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btnVerMas"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/casa" />

    <ImageButton
        android:id="@+id/imgBtnFamilia"
        android:layout_width="102dp"
        android:layout_height="85dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="72dp"
        android:onClick="selectImg"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/btnVerMas"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnYo"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toEndOf="@+id/imgBtnCasa"
        app:srcCompat="@drawable/familia" />

    <ImageButton
        android:id="@+id/imgBtnYo"
        android:layout_width="96dp"
        android:layout_height="85dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="76dp"
        android:onClick="selectImg"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/btnVerMas"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/yo" />
</androidx.constraintlayout.widget.ConstraintLayout>